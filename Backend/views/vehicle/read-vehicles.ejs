<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= pageTitle %></title>
</head>

<body>
    <h1><%= pageTitle %></h1>

    <% if (vehicles && vehicles.length > 0) { %>
        <table border="1">
            <thead>
                <tr>
                    <th>VehicleType</th>
                    <th>Make</th>
                    <th>Model</th>
                    <th>RegistrationTag</th>
                    <th>DriverName</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% vehicles.forEach(vehicle => { %>
                    <tr>
                        <td><%= vehicle.VehicleType %></td>
                        <td><%= vehicle.Make %></td>
                        <td><%= vehicle.Model %></td>
                        <td><%= vehicle.RegistrationTag %></td>
                        <td><%= vehicle.DriverName === 'N/A' ? 'No Driver' : vehicle.DriverName %></td>
                        <td><a href="/admin/vehicle/update/<%= vehicle.VehicleID %>">Change</a></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <h1>No Vehicles Found!</h1>
    <% } %>

    <%- include('../includes/end.ejs') %>
</body>
</html>
