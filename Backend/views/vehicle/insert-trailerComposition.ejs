<!DOCTYPE html>
<html lang="en">
<head>
 <meta charset="UTF-8">

  <title><%= pageTitle %></title>
    <style>
        body {
            font-family: "Inter", "Segoe UI", Arial, sans-serif;
            margin: 100px;
            background: #f9f9f9;
            color: #333;
        }
        .form-wrapper {
            position: relative;
            max-width: 800px;
            margin: auto;
        }
        form {
            max-width: 800px;
            margin: 0 auto;
            padding: 25px;
            border: 1px solid #e0e0e0;
            border-radius: 14px;
            box-shadow: 0 4px 16px rgba(0,0,0,0.06);
            background: #fff;
        }
        form.dimmed {
            opacity: 0.3;
            pointer-events: none;
        }
        .message-box {
            position: relative;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: #ffffff;
            border: 1px solid #ddd;
            padding: 25px;
            border-radius: 14px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.12);
            z-index: 10;
            max-width: 420px;
            text-align: center;
            color: #333;
        }
        .close-btn, .close-btn-sections {
            position: absolute;
            top: 10px;
            right: 12px;
            background: none;
            border: none;
            font-size: 20px;
            font-weight: bold;
            color: #888;
            cursor: pointer;
            z-index: 11;
            transition: color 0.2s;
        }
        .close-btn:hover,
        .close-btn-sections:hover {
            color: #e74c3c;
        }
        .hidden {
            display: none;
        }
        h1, h2, h3, h4 {
            text-align: center;
            margin: 10px 0;
            font-weight: 600;
            color: #222222;
        }
        label {
            display: block;
            margin-top: 12px;
            font-weight: 500;
            color: #444;
        }
        input, select {
            width: 96%;
            padding: 12px;
            margin-top: 6px;
            margin-bottom: 16px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 14px;
            transition: border-color 0.2s, box-shadow 0.2s;
        }
        input:focus, select:focus {
            border-color: #256cd6;
            outline: none;
            box-shadow: 0 0 0 3px rgba(37,108,214,0.2);
        }
        button {
            padding: 12px 20px;
            border-radius: 8px;
            font-size: 14px;
            cursor: pointer;
            transition: background 0.2s, color 0.2s, border 0.2s;
        }
        button[type="button"] {
            display: block;
            margin: 20px auto;
            background: #f1f1f1;
            border: 1px solid #ccc;
            color: #333;
        }
        button[type="button"]:hover {
            background: #e0e0e0;
        }
        .option-buttons {
            display: flex;
            justify-content: center;
            gap: 16px;
            margin-top: 15px;
        }
        .option-buttons button {
            background: #f9f9f9;
            border: 1px solid #bbb;
            color: #333;
            font-weight: 500;
            border-radius: 8px;
            width: 100%;
            text-align: left;
            padding: 12px 16px;
            font-size: 15px;
        }
        .option-buttons button:hover {
            background: #256cd6;
            color: #fff;
            border-color: #256cd6;
        }
        .save-btn {
            display: block;
            margin: 25px auto 10px;
            background: #256cd6;
            color: #fff;
            font-weight: bold;
            border: none;
            border-radius: 8px;
            padding: 12px 24px;
        }
        .save-btn:hover {
            background: #1e54aa;
        }
        .subsection {
            border-top: 1px dashed #ccc;
            padding-top: 20px;
            margin-top: 20px;
        }
        #existing-drivers-message-box .option-buttons,
        #existing-trucks-message-box .option-buttons {
            flex-direction: column;
            align-items: stretch;
            gap: 10px;
        }
    </style>
<script>
function showTruckMessage() {
    document.getElementById('trailerForm').classList.add('dimmed');
    document.getElementById('add-truck-message-box').classList.remove('hidden');
}
function hideTruckMessage() {
    document.getElementById('trailerForm').classList.remove('dimmed');
    document.getElementById('add-truck-message-box').classList.add('hidden');
}
function selectExistingTruck() {
    document.getElementById('trailerForm').classList.add('dimmed');
    document.getElementById('existing-trucks-message-box').classList.remove('hidden');
}
function hideExistingTruck(){
    document.getElementById('trailerForm').classList.remove('dimmed');
    document.getElementById('existing-trucks-message-box').classList.add('hidden');
}
function selectExistingDrivers() {
    document.getElementById('trailerForm').classList.add('dimmed');
    document.getElementById('existing-drivers-message-box').classList.remove('hidden');
}
function hideExistingDrivers(){
    document.getElementById('trailerForm').classList.remove('dimmed');
    document.getElementById('existing-drivers-message-box').classList.add('hidden');
}
function addNewTruck() {
    hideTruckMessage();
    document.getElementById('new-truck-section').classList.remove('hidden');
    document.getElementById('add-truck-btn').style.display = 'none';
}
function cancelNewTruck() {
    document.getElementById('new-truck-section').classList.add('hidden');
    document.getElementById('add-truck-btn').style.display = 'inline-block';
}
function selectTruck(id) {
        document.getElementById('ExistingTruckID').value = id;
        hideExistingTruck();
}
function selectDriver(id) {
        document.getElementById('DriverID').value = id;
        hideExistingDrivers();
}
</script>
</head>
<body>


<div class="form-wrapper">
<form id="trailerForm" action="/vehicle/trailerComposition/insert" method="POST">
    <div id="new-trailer-section">
        <h2>Add a New Trailer</h2>
        <input type="text" name="TrailerMake" placeholder="Make" required>
        <input type="text" name="TrailerModel" placeholder="Model" required>
        <input type="text" name="TrailerRegistrationTag" placeholder="Registration Tag" required>
        <div class="subsection">
            <h2>Trailer Inspections</h2>
            <% inspections.forEach(insp => { %>
                <label for="trailer-inspection-<%= insp.InspectionID %>"><%= insp.Name %> do</label>
                <input type="date" name="trailerInspections_<%= insp.InspectionID %>" id="trailer-inspection-<%= insp.InspectionID %>">
            <% }) %>
        </div>
        <button type="button" id="add-truck-btn" onclick="showTruckMessage()">Add Truck to this Trailer</button>
    </div>
    <div id="new-truck-section" class="hidden subsection">
        <button class="close-btn-sections" type="button" onclick="cancelNewTruck()">X</button>
        <h2>Add a New Truck</h2>
        <input type="text" name="TruckMake" placeholder="Make">
        <input type="text" name="TruckModel" placeholder="Model">
        <input type="text" name="TruckRegistrationTag" placeholder="Registration Tag">
        <div class="subsection">
            <h2>Truck Inspections</h2>
            <% inspections.forEach(insp => { %>
                <label for="truck-inspection-<%= insp.InspectionID %>"><%= insp.Name %> do</label>
                <input type="date" name="truckInspections_<%= insp.InspectionID %>" id="truck-inspection-<%= insp.InspectionID %>">
            <% }) %>
        </div>
        <button type="button" id="add-existing-drivers-btn" onclick="selectExistingDrivers()">Link Driver to this Composition</button>
    </div>
    <input type="hidden" name="ExistingTruckID" id="ExistingTruckID">
    <input type="hidden" name="DriverID" id="DriverID">
    <button class="save-btn" type="submit">Save</button>
</form>
</div>
<div id="add-truck-message-box" class="message-box hidden">
    <button class="close-btn" onclick="hideTruckMessage()">X</button>
    <p><strong>Choose Truck Option:</strong></p>
    <div class="option-buttons">
        <button type="button" onclick="selectExistingTruck()">Add Existing Truck</button>
        <button type="button" onclick="addNewTruck()">Add New Truck</button>
    </div>
    <% if (existingTrucks && existingTrucks.length > 0) { %>
        <div id="existing-trucks-message-box" class="message-box hidden">
            <button class="close-btn" onclick="hideExistingTruck()">X</button>
            <p><strong>Choose Existing Trucks:</strong></p>
            <div class="option-buttons">
                <% existingTrucks.forEach(truck => { %>
                    <button type="button" onclick="selectTruck('<%= truck.TruckID %>')">
                        <%= truck.Make %> <%= truck.Model %>, <%= truck.RegistrationTag %>
                    </button>
                <% }) %>
            </div>
        </div>
    <% } %>
</div>
<div id="existing-drivers-message-box" class="message-box hidden">
    <button class="close-btn" onclick="hideExistingDrivers()">X</button>
    <p><strong>Choose Drivers:</strong></p>
    <div class="option-buttons">
        <% existingDrivers.forEach(driver => { %>
            <button type="button" onclick="selectDriver('<%= driver.EmplID %>')">
                <%= driver.FirstName %> <%= driver.LastName %>
            </button>
        <% }) %>
    </div>
</div>

</body>
</html>
