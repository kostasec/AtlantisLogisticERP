<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Clients & Contacts</title>
    <style>
        .client-block { border:1px solid #ccc; margin:10px; padding:10px; }
        .contact-list { margin-left:20px; }
        .contact-person { margin-bottom:8px; }
    </style>
</head>
<body>
    <h1>Clients</h1>
    <% clients.forEach(function(client) { %>
        <div class="client-block">
            <strong><%= client.ClientName %></strong> (<%= client.TaxID %>)<br>
            Address: <%= client.StreetAndNmbr %>, <%= client.City %>, <%= client.ZIP %>, <%= client.Country %><br>
            Email: <%= client.Email %><br>
            <button onclick="toggleContacts('<%= client.TaxID %>')">Show Contacts</button>
            <div id="contacts-<%= client.TaxID %>" class="contact-list" style="display:none;">
                <% if (client.contacts.length === 0) { %>
                    <em>No contact persons.</em>
                <% } else { %>
                    <% client.contacts.forEach(function(contact) { %>
                        <div class="contact-person">
                            <strong><%= contact.ContactName %></strong><br>
                            Description: <%= contact.Description %><br>
                            Phone: <%= contact.PhoneNmbr %><br>
                            Email: <%= contact.PersonEmail %><br>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    <% }); %>
    <script>
        function toggleContacts(id) {
            var el = document.getElementById('contacts-' + id);
            el.style.display = (el.style.display === 'none') ? 'block' : 'none';
        }
    </script>
</body>
</html>
