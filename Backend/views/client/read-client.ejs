<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= pageTitle %></title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    .client-box {
      border: 1px solid #ccc;
      margin-bottom: 30px;
      padding: 15px;
      border-radius: 5px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }
    table, th, td {
      border: 1px solid #999;
    }
    th, td {
      padding: 8px;
      text-align: left;
    }
    .actions {
      display: flex;
      gap: 10px;
    }
    .actions form {
      display: inline;
    }
  </style>
</head>
<body>
  <h1>All Clients</h1>

  <% if (clients.length === 0) { %>
    <p>No clients found.</p>
  <% } else { %>
    <% clients.forEach(client => { %>
      <div class="client-box">
        <h2><%= client.ClientName %></h2>
        <p><strong>TaxID: </strong> <%= client.TaxID %></p>
        <p><strong>Reg. Number:</strong> <%= client.RegNmbr %></p>
        <p><strong>Address:</strong> <%= client.StreetAndNmbr %>, <%= client.ZIP %> <%= client.City %>, <%= client.Country %></p>
        <p><strong>Email:</strong> <%= client.Email %></p>

        <h3>Contact Persons</h3>

        <% if (client.Contacts.length === 0) { %>
          <p>No contacts for this client.</p>
        <% } else { %>
          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Phone</th>
                <th>Email</th>
              </tr>
            </thead>
            <tbody>
              
              <% client.Contacts.forEach(contact => { %>
                <tr>
                  <td><%= contact.ContactName %></td>
                  <td><%= contact.Description %></td>
                  <td><%= contact.PhoneNmbr %></td>
                  <td><%= contact.PersonEmail %></td>
                </tr>
              <% }) %>
              </tbody>
          </table>

          <br />
          <div class="actions">
            <form action="/admin/client/update/<%= client.TaxID %>">
            <button type="submit">Edit Client</button>
            </form>
            <form action="/admin/client/delete/<%= client.TaxID %>" method="POST" onsubmit="return confirm('Delete this client?');">
            <button type="submit">Delete Client</button>
            </form>
            </div>

        <% } %>
      </div>
    <% }) %>
  <% } %>

</body>
</html>
